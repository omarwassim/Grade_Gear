<%- include('partials/reservationheader') %>
<div class="container-fluid p-0">
  <header class="text-center py-5 bg-primary text-white">
    <h1 class="display-4 fw-bold">Make a Reservation</h1>
    <p class="lead">Book your Project with us today</p>
  </header>
  <section class="py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 bg-white shadow rounded p-5">
          <% if (typeof errors !== 'undefined') { %>
            <div class="alert alert-danger mb-4">
              <% errors.forEach(error => { %>
                <p class="mb-1"><%= error.msg %></p>
              <% }); %>
            </div>
          <% } %>
          <form id="reservationForm" action="/reservation" method="POST">
            <div class="mb-4">
              <label for="projectname" class="form-label fw-bold text-muted">Project Name</label>
              <input type="text" class="form-control form-control-lg" id="projectName" name="projectName" 
                     placeholder="Enter your project name" required>
            </div>
            <div class="mb-4">
              <label for="contactmail" class="form-label fw-bold text-muted">Contact Email Address</label>
              <input type="email" class="form-control form-control-lg" id="contactmail" name="contactMail" 
                     placeholder="Enter your contact email address" required>
            </div>

            <div class="mb-4">
              <label for="startDate" class="form-label fw-bold text-muted">Start Date</label>
              <input type="date" class="form-control form-control-lg" id="startDate" name="startDate" required>
            </div>
            <div class="mb-4">
              <label class="form-label fw-bold text-muted">Select Project Type</label>
              <small class="d-block text-muted mb-2">Select all that apply</small>
              <div class="d-flex flex-wrap gap-3">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="network" name="projectType[]" value="Network">
                  <label class="form-check-label" for="network">Network</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="cyber" name="projectType[]" value="Cyber">
                  <label class="form-check-label" for="cyber">Cyber</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="ai" name="projectType[]" value="AI">
                  <label class="form-check-label" for="ai">AI</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="database" name="projectType[]" value="Database">
                  <label class="form-check-label" for="database">Database</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="web-dev" name="projectType[]" value="Web Dev">
                  <label class="form-check-label" for="web-dev">Web Dev</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="embedded" name="projectType[]" value="Embedded">
                  <label class="form-check-label" for="embedded">Embedded</label>
                </div>
              </div>
            </div>
            <div class="mb-4">
              <label for="description" class="form-label fw-bold text-muted">Brief Description of the Project</label>
              <textarea class="form-control form-control-lg" id="description" name="description" rows="4" 
                        placeholder="Describe your project in a few sentences..."></textarea>
            </div>
            <div class="mb-4">
              <label for="endDate" class="form-label fw-bold text-muted">Estimated End Date</label>
              <input type="date" class="form-control form-control-lg" id="endDate" name="endDate" 
                     required readonly>
            </div>
            <div class="mb-4">
              <label for="price" class="form-label fw-bold text-muted">Estimated Price ($)</label>
              <input type="number" class="form-control form-control-lg" id="price" name="price" 
                     min="0" step="0.01" required readonly>
            </div>
            <button type="submit" class="btn btn-primary w-100 py-3 fw-bold rounded-pill">
              Submit Reservation
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <footer class="bg-dark text-white text-center py-4" style="background-color: #10374A !important;">
    <p class="mb-0">&copy; 2025 GradGear. All rights reserved.</p>
  </footer>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="../javascript/reservation.js"></script>
<%- include('partials/footer') %>
<%- include('partials/loginheader') %>    
<main class="background_wrapper">
  <div class="login_form_wrapper">
    <form action="/admin_login" class="login__form" method="post">
      <h1 class="title">Login</h1>
      <div class="login_form_content">
        <div class="login_content_box">
          <ion-icon name="person-outline"></ion-icon>
          <div class="login_content_box--input">
            <input
            type="email"
            placeholder=" "
              class="login__input email--input"
              required
              name="username"
              autocomplete="off"
            />
            <label for="email" class="login__label">Email</label>
          </div>
      </div>
        <div class="login_content_box">
          <ion-icon name="lock-closed-outline"></ion-icon>

          <div class="login_content_box--input">
            <input
              type="password"
              placeholder=" "
              class="login__input password--input"
              required
              name="password"
            />
            <label for="password" class="login__label">Password</label>
            <ion-icon
              class="password__hidden"
              id="password_hidden"
              name="eye-off-outline"
            ></ion-icon>
          </div>
        </div>
        <button type="submit" class="button__login">Login</button>            
      </div>
    </form>
  </div>
</main>
      <script type="module" src="../javascript/login.js"></script>
</body>
</html>